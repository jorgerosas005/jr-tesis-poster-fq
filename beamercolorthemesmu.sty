% A modification of Beamer seagull color theme
% Origin: http://mirrors.ctan.org/macros/latex/contrib/beamer/base/themes/color/beamercolorthemeseagull.sty

\definecolor{smuBlue}{RGB}{21, 28, 85}
\definecolor{smuGold}{RGB}{138, 112, 76}
\definecolor{scisGold}{RGB}{198, 146, 0}
\definecolor{smuLightGold}{RGB}{240, 238, 231}

\definecolor{lightgray}{RGB}{240, 240, 240}
\definecolor{darkspringgreen}{RGB}{9, 45, 27}

\setbeamercolor*{normal text}{fg=smuBlue,bg=white}
\setbeamercolor*{alerted text}{fg=smuBlue}
\setbeamercolor*{example text}{fg=smuBlue}
\setbeamercolor*{structure}{fg=smuBlue}

\providecommand*{\beamer@bftext@only}{%
  \relax
  \ifmmode
    \expandafter\beamer@bftext@warning
  \else
    \expandafter\bfseries
  \fi
}
\providecommand*{\beamer@bftext@warning}{%
  \ClassWarning{beamer}
    {Cannot use bold for alerted text in math mode}%
}

\setbeamerfont{alerted text}{series=\beamer@bftext@only}

